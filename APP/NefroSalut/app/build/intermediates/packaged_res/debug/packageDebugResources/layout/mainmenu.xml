<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Toolbar superior -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="37dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/juego_de_claqueta"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="225dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:background="@color/base"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto Bienvenida -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benvingut/da"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Texto Menu -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Botón Videos -->

    <!-- Botón Jocs -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVideos"
        style="@style/RoundedButtonStyle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/base"
        android:icon="@drawable/juego_de_claqueta"
        android:iconGravity="textStart"
        android:iconPadding="12dp"
        android:text="Videos"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <!-- Botón Dietas -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnJocs"
        style="@style/RoundedButtonStyle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/base"
        android:iconGravity="textStart"
        android:iconPadding="12dp"
        android:text="Jocs"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVideos" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDietas"
        style="@style/RoundedButtonStyle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/base"
        android:iconGravity="textStart"
        android:iconPadding="12dp"
        android:text="Dietas"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJocs" />

    <!-- Botón Perfil -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPerfil"
        style="@style/RoundedButtonStyle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/base"
        android:iconGravity="textStart"
        android:iconPadding="12dp"
        android:text="Perfil"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDietas" />

    <!-- Botón Foros -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnForos"
        style="@style/RoundedButtonStyle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/base"
        android:iconGravity="textStart"
        android:iconPadding="12dp"
        android:text="Foros"
        android:textColor="#000000"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPerfil" />

    <!-- Botón Omple les dades -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOmpleDades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Omple les dades"
        android:textColor="#000000"
        android:backgroundTint="@color/base"
        app:cornerRadius="16dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
